<div>
    <a class="btn btn-success text-black mt-3 mb-1" asp-action="CreateProduct"><h2>Create Product</h2></a> <br />
</div>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="CreateCategory">
            <h3 style="color:darkorange; text-align:center">Create New Category Form</h3>
            <div class="form-group">
                <label asp-for="CategoryName">Enter Category Name: </label>
                <input maxlength="30" class="form-control" asp-for="CategoryName" />
                <span class="text-danger" asp-validation-for="CategoryName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Enter Category Description: </label>
                <input maxlength="30" class="form-control" asp-for="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>            
            <p>
                <br />
                <input class="btn btn-success" type="submit" value="Submit" />
            </p>
        </form>
    </div>
</div>
@{
    List<Category> listCategoryes = TempData["ListCategories"] as List<Category>;
    if (listCategoryes.Count > 0)
    {
        <p>
            <h1 style="color:darkblue;"> List Categories: </h1>
        </p>
        <div class="d-flex flex-column">
            @foreach (var cat in listCategoryes)
            {
                <div class="card mb-2">
                    <div class="card-header"> Category Id : @cat.Id</div>
                    <div class="card-body" style="color:darkviolet;"> Category Name :@cat.CategoryName</div>
                    <div class="card-body" style="color:darkblue;"> Category Description : @cat.Description</div>
                    <div class="card-footer">
                        <a class="btn btn-danger" href="/Manager/DeleteCategory/@cat.Id">Delete Category</a>
                    </div>
                </div>
            }
        </div>
    }   
}