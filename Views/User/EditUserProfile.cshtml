@using DiplomWebShopVN.Models.Domain
@model ApplicationUser

    <div class="d-flex flex-column">
    <form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">

        <div class="form-group">
            <label style="font-weight:500;">Фото (не обирайте нове, щоб залишити існуюче): </label>
        @*    <input type="hidden" class="form-control" asp-for="ProfilePicture" value="@null" />*@
            <input class="form-control" type="file" value="@null" name="Photo" />
        @*    <span class="text-danger" asp-validation-for="ProfilePicture"></span>*@
        </div>  

        <div class="form-group">
            <label style="font-weight:500;">Прізвище: </label>
            <input maxlength="40" type="text" class="form-control" asp-for="Prizvyshe" value="@Model.Prizvyshe" />
            <span class="text-danger" asp-validation-for="Prizvyshe"></span>
        </div>
        <div class="form-group">
            <label style="font-weight:500;">Ім'я: </label>
            <input maxlength="40" type="text" class="form-control" asp-for="Name" value="@Model.Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label style="font-weight:500;">Электронна пошта: </label>
            <input maxlength="40" type="email" class="form-control" asp-for="Email" value="@Model.Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label style="font-weight:500;">Телефон: </label>
            <input type="tel" maxlength="15" class="form-control" asp-for="PhoneNumber" value="@Model.PhoneNumber" />
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>

            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input class="btn btn-success mt-2" type="submit" value="Змінити" />
        </form>
    </div>

